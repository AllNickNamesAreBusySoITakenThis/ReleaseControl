<Window x:Class="ControlApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ControlApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStyle="None">
	<Window.DataContext>
		<local:MainWindowViewModel/>
	</Window.DataContext>
	<Window.Resources>
		
	</Window.Resources>
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="auto"/>
			<RowDefinition Height="*"/>
			<RowDefinition Height="auto"/>
		</Grid.RowDefinitions>
		<Menu x:Name="menu" Height="25" FontFamily="Verdana" FontSize="16" Background="Wheat">			
			<MenuItem Header="Файл" VerticalAlignment="Center" Margin="1">
				<MenuItem Header="Добавить приложение" Background="{Binding Background, ElementName=menu}" BorderThickness="0"/>
			</MenuItem>
		</Menu>
		<DataGrid Grid.Row="1" ItemsSource="{Binding MyApps}" AutoGenerateColumns="False">
			<DataGrid.Columns>
				<DataGridTextColumn Header="Название" Binding="{Binding Path=Name}"/>
			</DataGrid.Columns>			
		</DataGrid>
		<Button Grid.Row="2" Command="{Binding ExitCommand}" Content="Выход" Width="125" Margin="5,5,5,5" HorizontalAlignment="Right"/>
	</Grid>
</Window>
